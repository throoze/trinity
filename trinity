from lexer.lexer import Lexer
from lang import tokens
import sys

ERR_BAD_USAGE = 1
ERR_BAD_FILENAME = 2
ERR_IO_ERROR = 3

usage = 'usage'

if len(sys.argv) == 2:
    filename = sys.argv[1]
else:
    print usage
    exit(ERR_BAD_USAGE)

try :
    file = open(filename, 'r')
except IOError as e:
    print str(e)
    exit(ERR_BAD_FILENAME)

try:
    inputString = file.read()
except IOError as e:
    print str(e)
    exit(ERR_IO_ERROR)

lexer = Lexer(module=tokens, inputString=inputString)
lexer.build()
lexer.lex()
#lexer.lex(silent=True)